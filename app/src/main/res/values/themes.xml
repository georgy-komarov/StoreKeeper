<resources>
    <!-- Base application theme. -->
    <style name="Theme.MainTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/top_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/top_bar</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Theme.MainTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="colorPrimary">@color/top_bar</item>
        <item name="colorOnPrimary">?attr/colorSecondary</item>
        <item name="android:textColor">@color/text</item>
        <item name="titleTextColor">@color/text</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Theme.MainTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemShapeFillColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Material3.Button.IconButton" parent="Widget.Material3.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraSmall</item>
    </style>
</resources>